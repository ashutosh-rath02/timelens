{
  "name": "timelens",
  "version": "1.0.0",
  "description": "TimeLens - A native Windows app that records your screen at 1 FPS, analyzes it with AI, and generates a timeline of your activities with summaries.",
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --config webpack.config.js --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "build:main": "electron-builder",
    "dist": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "screen-recording",
    "ai",
    "timeline",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2",
    "moment": "^2.30.1",
    "node-cron": "^4.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.2.0",
    "recharts": "^3.2.1",
    "screenshot-desktop": "^1.15.2",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.2.0",
    "css-loader": "^7.1.2",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "com.timelens.app",
    "productName": "TimeLens",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "src/shared/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
